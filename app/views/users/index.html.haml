.page-header
  %h1 Пользователи
%table.table.table-striped.table-hover
  %thead
    %tr
      %th Имя
      %th email
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.name, user_path(user)
        %td= user.email
        %td
          = link_to edit_user_path(user) do
            %span.glyphicon.glyphicon-pencil
        %td
          = link_to user, method: :delete, confirm: "Вы действительно хотите удалить пользователя '#{user.name}'" do
            %span.glyphicon.glyphicon-trash

= link_to 'Добавить пользователя', new_user_path, class: 'btn btn-default'
