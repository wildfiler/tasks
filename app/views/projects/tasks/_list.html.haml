.panel.panel-default
  .panel-heading
    %h3.panel-title
      Проект "#{project.title}"
      =link_to project_new_task_path(project_id: project.id), class: 'btn btn-default btn-xs pull-right' do
        %span.glyphicon.glyphicon-plus
        Добавить задачу    
  %table.table.table-striped.table-hover.hide-buttons
    %thead
      %tr
        %th.col-sm-7 Наименование
        %th.col-sm-1 Статус
        %th.col-sm-2 Создано
        %th.col-sm-2 Завершено
    %tbody
      = render partial: 'projects/tasks/tasks', locals: {tasks: project.tasks}