.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h1 Sign up

      .panel-body
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{class: 'form-horizontal'}) do |f|
          .error_explanation
            = devise_error_messages!

          .form-group
            = f.label :name, class: 'control-label col-sm-3'
            .col-sm-9
              = f.text_field :name, :autofocus => true, class: 'form-control'

          .form-group
            = f.label :email, class: 'control-label col-sm-3'
            .col-sm-9
              = f.email_field :email, class: 'form-control'

          .form-group
            = f.label :password, class: 'control-label col-sm-3'
            .col-sm-9
              = f.password_field :password, class: 'form-control'

          .form-group
            = f.label :password_confirmation, class: 'control-label col-sm-3'
            .col-sm-9
              = f.password_field :password_confirmation, class: 'form-control'

          .form-group
            .col-sm-12
              = f.submit "Sign up", class: 'pull-right btn btn-primary'
