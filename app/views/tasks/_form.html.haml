= form_for(@task, html: {role: 'form', class: 'form-horizontal'}) do |f|
  - if @task.errors.any?
    .error_explanation
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title, class: 'control-label col-sm-2'
    .col-sm-7
      = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description, class: 'control-label col-sm-2'
    .col-sm-7
      = f.text_area :description, rows: 15,  class: 'form-control wysihtml5'
  .form-group
    = f.submit class:'btn btn-default'
